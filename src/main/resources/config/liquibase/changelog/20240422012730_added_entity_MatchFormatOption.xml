            <column name="game_01_out_option_type" type="string"/>
            <column name="game_01_bull_option_type" type="string"/>
            <column name="game_01_arrange" type="boolean"/>
            <column name="cricket_over_kill" type="boolean"/>
            <column name="cricket_score" type="numeric"/>
            <column name="team_game_01_freeze_view" type="string"/>
            <column name="team_game_01_point" type="boolean"/>
            <column name="team_cricket_mark" type="boolean"/>
            <column name="team_cricket_finish" type="string"/>
