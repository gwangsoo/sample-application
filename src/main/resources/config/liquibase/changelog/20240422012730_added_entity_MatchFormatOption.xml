    <!--
        Added the entity MatchFormatOption.
    -->
    <changeSet id="20240422012730-1" author="jhipster">
        <createTable tableName="tb_matchformat_option" remarks="매치포맷 옵션">
            <column name="id" type="varchar(16)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="game_01_in_option_type" type="varchar(255)" remarks="01게임 In Option">
                <constraints nullable="true" />
            </column>
            <column name="game_01_out_option_type" type="varchar(255)" remarks="01게임 Out Option">
                <constraints nullable="true" />
            </column>
            <column name="game_01_bull_option_type" type="varchar(255)" remarks="01게임 Bull Option">
                <constraints nullable="true" />
            </column>
            <column name="game_01_arrange" type="boolean" remarks="01게임 arrange">
                <constraints nullable="true" />
            </column>
            <column name="cricket_over_kill" type="boolean" remarks="Cricket Over Kill">
                <constraints nullable="true" />
            </column>
            <column name="cricket_score" type="integer" remarks="Cricket Score">
                <constraints nullable="true" />
            </column>
            <column name="team_game_01_freeze_view" type="varchar(255)" remarks="Team 01게임 Freeze Option">
                <constraints nullable="true" />
            </column>
            <column name="team_game_01_point" type="boolean" remarks="Team 01게임 Point">
                <constraints nullable="true" />
            </column>
            <column name="team_cricket_mark" type="boolean" remarks="Team Cricket Mark">
                <constraints nullable="true" />
            </column>
            <column name="team_cricket_finish" type="varchar(255)" remarks="Team Cricket Finish">
                <constraints nullable="true" />
            </column>
            <column name="team_cricket_point" type="boolean" remarks="Team Cricket Point">
                <constraints nullable="true" />
            </column>
            <column name="match_format_id" type="varchar(16)">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->

